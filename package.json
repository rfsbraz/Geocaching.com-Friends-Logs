{
  "name": "geocaching-friends-logs",
  "version": "2.1.1",
  "description": "Chrome extension that shows your friends logs at the top of geocaching.com cache pages",
  "private": true,
  "scripts": {
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write *.js *.json *.html *.css --ignore-path .prettierignore",
    "format:check": "prettier --check *.js *.json *.html *.css --ignore-path .prettierignore",
    "sync-version": "node scripts/sync-version.js",
    "build": "npm run sync-version && node scripts/build.js",
    "build:zip": "npm run sync-version && node scripts/zip.js",
    "test": "echo \"No tests configured yet\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rfsbraz/Geocaching.com-Friends-Logs"
  },
  "author": "rfsbraz",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "archiver": "^7.0.0",
    "eslint": "^9.39.2",
    "globals": "^16.1.0",
    "prettier": "^3.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
