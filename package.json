{
  "name": "geocaching-friends-logs",
  "version": "2.3.2",
  "description": "Browser extension that shows your friends logs at the top of geocaching.com cache pages",
  "private": true,
  "scripts": {
    "lint": "eslint *.js tests/**/*.js",
    "lint:fix": "eslint *.js tests/**/*.js --fix",
    "format": "prettier --write \"*.js\" \"*.json\" \"*.html\" \"*.css\" \"tests/**/*.js\" \"tests/**/*.html\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"*.js\" \"*.json\" \"*.html\" \"*.css\" \"tests/**/*.js\" \"tests/**/*.html\" --ignore-path .prettierignore",
    "sync-version": "node scripts/sync-version.js",
    "build": "npm run sync-version && node scripts/build.js",
    "build:zip": "npm run sync-version && node scripts/zip.js",
    "build:chrome": "npm run sync-version && node scripts/build-multi.js --browser chrome",
    "build:firefox": "npm run sync-version && node scripts/build-multi.js --browser firefox",
    "build:opera": "npm run sync-version && node scripts/build-multi.js --browser opera",
    "build:edge": "npm run sync-version && node scripts/build-multi.js --browser edge",
    "build:all": "npm run sync-version && node scripts/build-multi.js --browser all",
    "test": "jest",
    "test:e2e": "npx playwright test",
    "test:e2e:chromium": "npx playwright test --project=chromium",
    "test:e2e:firefox": "npx playwright test --project=firefox",
    "test:e2e:screenshots": "npx playwright test --project=screenshots"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rfsbraz/Geocaching.com-Friends-Logs"
  },
  "author": "rfsbraz",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "archiver": "^7.0.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-webextension-mock": "^4.0.0",
    "playwright-webextext": "^0.0.4",
    "prettier": "^3.2.0",
    "tslib": "^2.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
